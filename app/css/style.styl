		margin-bottom: 20px
		fl()
		.btn--md
			width: 100%
			margin-bottom: 10px
	margin-left: auto

.header-cart--open
	.icon--close
		display: block
		size 15px
	.icon--open
		display: none
	.cart-val
		display: none

	.cart-link
		display block

.incr
	f()
	height 40px
	position relative
	width 160px

.incr--small
	width: 80px
	.incr__nav
		size 26px
		.icon
			size 10px
	.incr__val
		width: 25px
		font-size: 12px
		font-weight: 700

