.cart
	+below(768px)
		size 45px
	position: relative
	size 50px
	flex(mid)
	round()
	border 2px solid $mark
	.icon
		size 28px
		fill $mark

.cart-link
	position absolute
	width: 100%
	height: 100%
	top 0
	left 0
	z-index 10
	display none

.cart-val
	position: absolute
