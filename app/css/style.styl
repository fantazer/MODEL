	@extend .type--lg
	font-weight 600
	color $dark
	tr()
	display block
	&:hover
		color $mark
.basket__adds
	+below(768px)
		width: 100%
		text-align center
.basket__adds-el
	+below(768px)
		margin-bottom: 10px
		text-align: center

	cp()
	margin-top: 5px
	display: inline-block
	margin-right: 5px

//.basket__inc
.basket__price
	+below(768px)
		margin-top: 20px
		font-size: 20px
	color $dark
	font-weight 600
	font-size: 14px
	white-space nowrap

.basket__delete
