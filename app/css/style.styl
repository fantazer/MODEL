@keyframes bounceIn {
	from {
			transform: scale3d(1, 1, 1);
	}

	50% {
			transform: scale3d(1.05, 1.05, 1.05);
	}
	to {
			transform: scale3d(1, 1, 1);
	}
	//
	//from {
  //  opacity: 0;
  //  transform: translate3d(0, -100%, 0);
  //}
	//
  //to {
  //  opacity: 1;
  //  transform: none;
  //}
}

.bounceIn
	animation-name: bounceIn

.basket-wrap
	+below(1024px)
		display none
	width: 350px
	position: absolute
	left: -9999px
	top 100%
	background: white
	z-index 100
	opacity:0
	box-shadow: 0 12px 25px rgba(0, 0, 0, 0.15);
	//display: none
	border-top:1px solid #e6e6e6
	transition opacity .6s
	margin-top: -1px
	br(10px)

.bounce-show
