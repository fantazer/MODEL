		margin-right: 0
		height: 100px
		width: 100px
	size 70px
	br(5px)
	bg-full()
	background-size: contain
	margin-right: 20px

.basket__ingr
	/*+below(768px)
		flex(mid)
		margin-left:initial
		margin-bottom: 20px*/
	f()
	display: none
	margin-left: auto

.basket__ingr-el
	bg-full()
	margin-right: 20px
	size 40px
	background-size: contain

.basket__name
	font-weight: 700
	font-size: 14px
	margin-bottom: 5px
	display block
	f()

.basket__name-text
	+below(768px)
		font-size: 20px
		margin-bottom: 20px
