	transform translateY(-100%)!important
	transition all 1s

.shrink
	position fixed!important
	top 0
	left 0
	width 100%
	margin 0
	z-index 999
	animation:  slideInDown  1s 1 ease-in-out;
	.header-info__callback
		color white
	.header-main__logo
		+below(768px)
			width: 40px
