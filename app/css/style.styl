body
	@extend .type--main
	font-family $v-font
	color $main-text-color
	line-height 1.2
	letter-spacing 0.01em

.hidden-block
	position: relative
	height: 0
	z-index 3
	opacity:0
	left -9999px
	transform translateY(-20px)
	margin: 0
	padding: 0



.main-cont
	center(1250px,10px)

.header
	position: relative
.header-top-wrap
	+below(1024px)
		display none
	background: #f5f5f5
//.main-cont
.header-top
	f()
	align-items: center
	height: 60px
.logo
	+below(1024px)
		width: 200px
	+below(768px)
		width: 110px
	margin-right: 5%
	max-width 150px
.header-location
	+below(1024px)
		display: none
	margin-right: 5%
	f()
	align-items center
.header-info
	f()
	cp()
	align-items: center
	margin-right: 5%
	.divider
		color $snow
		@extend .type--md
		font-weight 600
		display: inline-block
		margin: 0 5px
.header-info__icon
	margin-right: 10px
	flex(mid)
	.icon
		size 20px
		fill #b1b3b4

.header-info__val
	white-space nowrap
	color $dark
	@extend .type--md
	font-weight 600
.header-info__text
	@extend .type--sm
	color #b1b3b4
	font-weight 500
	white-space nowrap
.header-contact
	+below(768px)
		display: none
	f()
	align-items center
.header-auth
	+below(1024px)
		display: none
	f()
	align-items: center
	margin-left: auto
	margin-right: 100px
	.icon
		margin-right: 10px
		size 20px
		fill $mark
