	.header-auth-state--false
		display: block
	.header-auth-state--true
		display: none
.header-auth-state--false
	display: none
	position: relative
	span
		font-weight: 500
		border-bg()
.header-auth-state--true
	cp()
	span
		tr(all)
		color $gray
		&:hover
			color black
.header-auth__bonus
