	padding: 4px 8px
	background: $mark
	top -10px
	right: -50%
	font-weight: 700
	line-height: 1
	flex(mid)
	font-size: 10px
	color white
	br(10px)
	font-weight: 700
	span
		display: inline-block
//
.slide-header-auth
	color white
	flex(mid)
	.icon
		margin-right: 10px
		size 20px
		fill $mark
.slide-header-auth--true
	.slide-header-auth-state--false
		f()
	.slide-header-auth-state--true
		display: none
.slide-header-auth-state--false
	display: none
	position: relative
	span
		color white
		font-weight: 500
		display: block

.slide-header-auth-state--true
	cp()
	span
		tr(all)
		color $gray
		link(#f5f5f5)
		&:hover
			color black
