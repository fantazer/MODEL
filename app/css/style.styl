		.icon
			size 40px
	.incr__plus
		.icon
			fill $mark
	.incr__minus
		.icon
			fill $gray
//increment-end

.header__sub-arrow
	+below(1024px)
		display none
	flex(mid)
	cp()
	.icon
		size 20px

.header__sub-arrow-wrap
	flex(mid)

.basket-clear
	+below(768px)
		margin-right: 0
	margin-right: 20px

.basket-empty
	flex(mid)
	fl()
	padding: 20px
.basket-empty-img
	margin-bottom: 20px
.basket-empty__title
	text-align: center
	@extend .type--lg
	margin-bottom: 10px
	font-weight: 700
.basket-empty__text
	text-align: center

@keyframes slideInDown {
	from {
		transform: translate3d(0, -100%, 0);
		visibility: visible;
	}

	to {
		transform: translate3d(0, 0, 0);
	}
}

.shrinkUp
	position fixed!important
	top 0
	left 0
