mixin header()
	//block header
	.header(class=attributes.page)
		//header-top
		.header-top-wrap
			.main-cont
				.header-top
					.head-toggle
						+icon("menu","icon icon-open")
						+icon("close","icon icon-close")
					a(href="/").logo
						img(src="img/logo.svg", alt="")
					.header-location
						.header-info
							.header-info__icon
								+icon("location","icon")
							.header-info__val Санкт-Петербург
						.header-info__text Доставка за 45-90 минут
					.header-contact
						.header-info
							.header-info__icon
								+icon("phone","icon")
							.header-info__val
								a(href="tel:+7 (7172) 767 767")  +7 (7172) 767 767
								span.divider |
								a(href="tel:+7 (707) 988 78 87")  +7 (707) 988 78 87
						.header-info__text Сегодня 10 - 24
					a(href="#").header-auth.header-auth--true
						// toggle .header-auth--true
						+icon("user","icon")
						.header-auth-state--true
							span Войти
						.header-auth-state--false
							span Александр
							.header-auth__bonus
								span 356 Б
					.cart-wrap.cart-wrap--mobile
						.cart
							+icon("close","icon icon--close")
							+icon("cart","icon icon--open")
							.cart-val 33
		.slide-menu
			.slide-row
				.slide-header-auth
					// toggle .slide-header-auth--true
					+icon("user","icon")
					.slide-header-auth-state--true
						span Войти
					.slide-header-auth-state--false
						span Александр
						.slide-header-auth__bonus
							span 356 Б
			.slide-row
				.slide-menu__list
					a(href="#").slide-menu__list-el Акции
					a(href="#").slide-menu__list-el Доставка
					a(href="#").slide-menu__list-el О нас
			.slide-row
				.slide-header-location
					.slide-header-info
						.slide-header-info__icon
							+icon("location","icon")
						.slide-header-info__val Санкт-Петербург
					.slide-header-info__text Доставка за 45-90 минут
			.slide-row
				.slide-header-contact
					.slide-header-info
						.slide-header-info__icon
							+icon("phone","icon")
						.slide-header-info__val
							a(href="tel:+7 (7172) 767 767")  +7 (7172) 767 767
					.slide-header-info__text Сегодня 10 - 24


		.header-menu-wrap
			.main-cont
				.header-menu
					a(href="/").logo
						img(src="img/logo.svg", alt="")
					.header-nav
						a(href="#").header-nav__el Пицца
						a(href="#").header-nav__el Суши
						a(href="#").header-nav__el Закуски
						a(href="#").header-nav__el Гарниры
						a(href="#").header-nav__el Комбо
						a(href="#").header-nav__el Напитки
					.header-nav.header-nav--add
						a(href="#").header-nav__el Акции
						a(href="#").header-nav__el Доставка
						a(href="#").header-nav__el О нас
					.cart-wrap.cart-wrap--desctop
						.cart-cost 2 850 ₽
						.cart
							+icon("close","icon icon--close")
							+icon("cart","icon icon--open")
							.cart-val 33

		.basket-wrap
			.main-cont
				.basket
					.basket-wrap-coner
					.basket-empty
						.basket-empty__title Ваша корзина пуста.
						.basket-empty__text Добавь интересующие товары из меню сайта

					.header__sub-arrow-up.header__sub-arrow
						.header__sub-arrow-wrap
							+icon("arrow-up","icon")
					.basket-container
						- for (var i=0;i<4;i++)
							.basket__el
								.basket__el-info
									.basket__img(style="background-image:url('img/item-pizza-1.png')")
									.basket__name
										a(href="#").basket__name-text Малибу #{i+1}
										.basket__adds
											.basket__adds-el <b>2x</b> соус тар-тар
											.basket__adds-el <b>2x</b> соус тар-тар
								.basket__el-change
									.basket__inc
										+incr()
									.basket__price 120 р.
									.basket__delete
										+icon("garbage","icon")
					.header__sub-arrow-down.header__sub-arrow
						.header__sub-arrow-wrap
							+icon("arrow-down","icon")
					//basket-footer
					.basket-footer
						.basket-total-text Итого:
						.basket-total
							//.basket-total-false 15 000 р.
							.basket-total-true 12 000 р.
						//.basket-promo
							.promo
								input(type="text" placeholder="Промокод").promo-input
								.promo-get
									+icon("arrow-custom","icon")
						.basket-get
							a(href="#").btn--md.btn--light.basket-clear.js-basket-clear Очистить
							a(href="#").btn--md.btn--yellow Оформить
	//block header end