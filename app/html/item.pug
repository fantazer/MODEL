+header(page ="header--main-page")
.content
	.main-cont
		.card
			.card-img
				.card-img__el(style="background-image:url('img/pizza.jpg')")
			.card-info
				.card__title
					.title-row-back
						+icon("round-arrow-left","icon")
					span Рокки Роутс
